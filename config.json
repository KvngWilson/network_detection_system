      "packet_rate_threshold": 100
    }
  },
  "alert_system": {
    "log_file": "ids_alerts.log",
    "high_confidence_threshold": 0.8
  },
  "capture": {
    "queue_timeout": 1.0,
    "capture_filter": ""
  }
}
